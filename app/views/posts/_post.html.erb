<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= post.author.name %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= post.category.name %>
  </p>

  <p>
    <strong>Comments:</strong>
    <ul>
    <% post.comments.each do |comment| %>
      <li><%= comment.content %></li>
    <% end %>
    </ul>
  </p>

</div>
